{
  "name": "web-component-analyzer",
  "displayName": "Web Component Analyzer",
  "description": "Visualize React, Vue 3, and Svelte 5 component structure through Data Flow Diagrams (DFD)",
  "version": "0.0.3",
  "publisher": "shibukawa",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "keywords": [
    "react",
    "vue",
    "vue3",
    "svelte",
    "svelte5",
    "component",
    "visualization",
    "dfd",
    "data flow diagram",
    "composition api",
    "hooks",
    "composables",
    "runes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shibukawa/web-component-analyzer.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "web-component-analyzer.showDFD",
        "title": "Show Component DFD",
        "category": "Web Component Analyzer"
      },
      {
        "command": "web-component-analyzer.refreshDFD",
        "title": "Refresh Component DFD",
        "category": "Web Component Analyzer"
      }
    ],
    "keybindings": [
      {
        "command": "web-component-analyzer.showDFD",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus && resourceExtname =~ /\\.(tsx|jsx|vue|svelte)$/"
      },
      {
        "command": "web-component-analyzer.refreshDFD",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && resourceExtname =~ /\\.(tsx|jsx|vue|svelte)$/"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "web-component-analyzer.showDFD",
          "when": "resourceExtname =~ /\\.(tsx|jsx|vue|svelte)$/",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run compile:webview",
    "compile": "node esbuild.mjs",
    "compile:webview": "node esbuild.webview.mjs",
    "compile:tests": "tsc",
    "watch": "node esbuild.mjs --watch",
    "watch:webview": "node esbuild.webview.mjs --watch",
    "pretest": "npm run compile && npm run compile:tests && npm run lint",
    "lint": "eslint src",
    "test": "node out/test/acceptance/acceptance-test-runner.js",
    "build": "npm run compile && npm run compile:webview"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.36.0",
    "mermaid": "^11.12.1",
    "ovsx": "^0.10.7",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@swc/core": "^1.15.1",
    "@web-component-analyzer/analyzer": "file:../analyzer"
  },
  "license": "Apache-2.0"
}
