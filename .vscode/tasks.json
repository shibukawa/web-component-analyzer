// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-extension",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build", "--workspace", "packages/extension"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			},
			"group": "build"
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"path": "packages/extension",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
